<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="jett.MainWindow"
            prefWidth="400.0" prefHeight="600.0"
            stylesheets="@styles.css">


    <children>

        <!-- Messages area -->
        <ScrollPane fx:id="scrollPane"
                    hbarPolicy="NEVER"
                    fitToWidth="true"
                    AnchorPane.topAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.bottomAnchor="52.0">
            <content>
                <!-- Dialog container: compact spacing & padding for readability -->
                <VBox fx:id="dialogContainer"
                      spacing="8.0"
                      style="-fx-padding: 10;">
                </VBox>
            </content>
        </ScrollPane>

        <!-- Input bar pinned to bottom -->
        <HBox spacing="8.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.bottomAnchor="0.0"
              style="-fx-padding: 8;">
            <children>
                <TextField fx:id="userInput"
                           promptText="Type a commandâ€¦"
                           onAction="#handleUserInput"
                           HBox.hgrow="ALWAYS"
                           style="-fx-font-size: 11pt; -fx-pref-height: 40px;"/>
                <Button fx:id="sendButton"
                        text="Send"
                        defaultButton="true"
                        onAction="#handleUserInput"
                        style="-fx-font-size: 11pt; -fx-pref-height: 40px; -fx-pref-width: 90px;"/>
            </children>
        </HBox>

    </children>
</AnchorPane>
